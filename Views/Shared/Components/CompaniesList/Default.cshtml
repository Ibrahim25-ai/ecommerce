@model IEnumerable<Company>

@{
    ViewData["Title"] = "List of Companies";
}
<div class="col-lg-8">
    <div class="white_card card_height_100 mb_20 ">
        <div class="white_card_header">
            <div class="box_header m-0">
                <div class="main-title">
                    <h3 class="m-0">Companies Details</h3>
                </div>
                <div class="header_more_tool">
                    <div class="dropdown">
                        <span class="dropdown-toggle" id="dropdownMenuButton"
                              data-bs-toggle="dropdown">
                            <i class="ti-more-alt"></i>
                        </span>
                        <div class="dropdown-menu dropdown-menu-right"
                             aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="#"> <i class="fa fa-eye"></i> Action</a>
                            <a class="dropdown-item" href="#"> <i class="fa fa-trash"></i> Delete</a>
                            <a class="dropdown-item" href="#"> <i class="fa fa-edit"></i> Edit</a>
                            <a class="dropdown-item" href="#"> <i class="fa fa-print"></i> Print</a>
                            <a class="dropdown-item" href="#"> <i class="fa fa-download"></i> Download</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="white_card_body QA_section">
            <div class="QA_table ">

                <table class="table lms_table_active2 p-0">
                    <thead>
                        <tr>
                            <th scope="col">Company Name</th>
                            <th scope="col">Description </th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="customer d-flex align-items-center">
                                        <div class="thumb_34 mr_15 mt-0">
                                            <img class="img-fluid radius_50"
                                                 src="@item.CompanyLogoURL" alt>
                                        </div>
                                        <span class="f_s_12 f_w_600 color_text_5"> @Html.DisplayFor(modelItem => item.CompanyName)</span>
                                    </div>
                                </td>
                                <td class="f_s_12 f_w_400 color_text_6"> @Html.DisplayFor(modelItem => item.Description)</td>
                                
                                <td>
                                    <div class="action_btns d-flex">
                                        <a asp-controller="Companies" asp-action="Edit" asp-route-id="@item.Id" class="action_btn mr_10"> <i class="far fa-edit"></i> </a>
                                        <a asp-controller="Companies" asp-action="Delete" asp-route-id="@item.Id" class="action_btn"> <i class="fas fa-trash"></i> </a>
                                    </div>
                                </td>
                            </tr>
                        }
                       
                        
                    </tbody>
                </table>
               
            </div>
        </div>
        <div class="row white_card_body  justify-content-end">
            <a class="btn btn-primary mt-5 text-center justify-content-end" asp-controller="Companies"  asp-action="Create">
                <i class="bi bi-plus-circle"></i> Add Company
            </a>
        </div>
    </div>
</div>